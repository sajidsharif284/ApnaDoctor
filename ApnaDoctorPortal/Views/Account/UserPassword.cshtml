    <link rel="stylesheet" type="text/css" href="~/Content/css/login.css" />
    
</head>
<body>
    <main>
        <div class="row parent">
            <div class="col-md-4 offset-md-4" style="height:460px;border-radius:5px">
                <div>
                    <img src="~/Content/img/Logo 2.jpg" style="width:120px;height:100px;display:block;margin:30px auto 0px auto" />
                </div><br /><br />
       @using (Html.BeginForm("UserInformation", "Account",  FormMethod.Post))
       {
           @Html.Hidden("role",(string)ViewBag.Role);
           @Html.Hidden("number", (string)ViewBag.Number);
                <div class="form-group">
                    <label class="col-md-2 control-label  ">Password:</label>
                    <input type="text" class="form-control col-md-11 ml-3 " name="password" />
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label  ">Confirm Password:</label>
                    <input type="text" class="form-control col-md-11 ml-3" name="confirmpassword" />
                </div>
                    <br />
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Next" class="btn btn-default btnlogin col-md-12" />
                        </div>
                    </div>
       }
                </div>
            </div>
    </main>
</body>
</html>