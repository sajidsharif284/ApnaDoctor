@model IEnumerable<ApnaDoctor.Models.DoctorProfile>

@{
    ViewBag.Title = "DoctorProfiles";
    Layout = "~/Views/Shared/LayoutPatient.cshtml";
}
<div class="row ml-4">
    <h4 class="col-md-5 mt-4">Doctor Profiles</h4>
</div>
<table class="table-bordered table-striped table-hover styled-table ml-4" style="width:95%">
    <thead>
        <tr>
            <th>
                DoctorName
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorSpecialty.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhysicalAppointmentPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VirtualAppointmentPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoAppointmentPrice)
            </th>
            <th>Detail</th>
        </tr>
    </thead>

@foreach (var item in Model)
{
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorSpecialty.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhysicalAppointmentPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VirtualAppointmentPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VideoAppointmentPrice)
            </td>
            <td>
                @Html.ActionLink("Timing", "DoctorSchedule", new { id = item.ApplicationUserId }) |
                @Html.ActionLink("Education", "DoctorQualification", new { id = item.ApplicationUserId })
            </td>
        </tr>
    </tbody>
}

</table>
