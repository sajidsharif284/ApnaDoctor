@model IEnumerable<ApnaDoctorPortal.Models.InsuranceCompany>

@{
    ViewBag.Title = "GetInsurancePolicyData";
    Layout = "~/Views/Shared/LayoutPatient.cshtml";
    <link rel="stylesheet" href="~/Content/css/StyleSheet1.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
}


      
            @foreach (var item in Model)
            {
                var imgsrc = item.PicURL;
                <div class="col-md-3 mt-4 ml-4 p-2 modalopen " style="background-color:white;color:black;border:1px solid #ccc;border-radius:10px;cursor:pointer">

                    <img src='@imgsrc' style="width:120px;height:40px;" />
                    <label class="ml-3">@item.Name</label>

                </div><br /><br /><br /><br />
            }
                


    <script>

        $(document).ready(function () {

            $(document).on('click', ".modalopen", function () {
                debugger;


                $('#slotBooking').modal('show');
            });
        })


    </script>

    <div class="modal  fade in" id="slotBooking" role="dialog" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header bg-blue">
                    <h4 class="modal-title ">Insurance Company</h4>
                </div>
                <div class="modal-body text-center">
                    <div class="row ">
                        <div class="col-md-12">
                            <label class="col-md-4 offset-md-1 text-left">CNIC</label>
                            <div>
                                <input type="text" class="col-md-5 form-control" />
                            </div>
                        </div>
                    </div><br /><br />
                    <div class="row">
                        <div class="col-md-12">
                            <label class="col-md-4 offset-md-1 text-left">Policy Number</label>
                            <div>
                                <input type="text" class="col-md-5 form-control" />
                            </div>
                        </div>
                    </div>


                    <div class="modal-footer">
                        @using (Html.BeginForm())
                        {

                            <button type="button" class="btn btn-default" data-dismiss="modal" onclick="OnClientClose()">Close</button>
                            <button type="submit" class="btn btn-primary">Book Appointment</button>
                        }
                    </div>
                </div>

            </div>
        </div>
