@model ApnaDoctor.Models.MedicineNames

@{
    ViewBag.Title = "AddMedicine";
    Layout = "~/Views/Shared/LayoutDoctor.cshtml";
}

<h2>Add Medicine</h2>
<hr style="width: 1px; color: #cc0000; width: 100%; border: 1px solid #cc0000;">
<div class="col-xs-12 col-md-6 col-lg-4">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Medicine Name</label>
            @Html.DropDownList("MedicineNames",
new SelectList(ViewBag.MedicineName, "Id", "MedicineName"), "Select", new { @class = "form-control chosen-select", PlaceHolder = "Select" })
        </div>
        <div class="form-group">
            <label> Medicine Name</label>
            @Html.EditorFor(model => model.MedicineName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MedicineName, "", new { @class = "text-danger" })

        </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add" class="btn btn-" />
                </div>
            </div>

    }
</div>